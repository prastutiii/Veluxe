@model IEnumerable<Veluxe.Models.OrderModel>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/adminProduct.css" />

<div class="manage-products">
    <h2>Manage Orders</h2>

    <a asp-action="Create" class="add-btn">+ Add New Order</a>

    <table class="product-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" style="text-align:center;">No orders found</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.order_id</td>
                        <td>@item.first_name</td>
                        <td>@item.address</td>
                        <td>@item.phone_number</td>
                        <td>@item.order_date.ToString("yyyy-MM-dd")</td>
                        <td>Rs. @item.total_amount</td>
                        <td>@item.status</td>
                        <td>
                            <a asp-action="Read" asp-route-id="@item.order_id" class="edit-btn">View</a>
                            <a asp-action="Update" asp-route-id="@item.order_id" class="edit-btn">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.order_id" class="delete-btn">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
