@model Veluxe.Models.UserModel

@{
    ViewData["Title"] = "Read User";
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="~/css/adminCRUD.css" />

<div class="container-section">
    <div class="section">
        <h2 class="form-title">Create User</h2>
        <form asp-action="Read" method="post">
            <div class="form-group">
                <label asp-for="user_id">User ID:</label>
                <input value="@Model.user_id" readonly />
            </div>

            <div class="form-group">
                <label asp-for="name">User Name:</label>
                <input value="@Model.name" readonly />
            </div>

            <div class="form-group">
                <label asp-for="email">Email:</label>
                <input value="@Model.email" readonly />
            </div>

            <div class="form-group">
                <label asp-for="address">Address:</label>
                <input value="@Model.address" readonly />
            </div>

            <div class="form-group">
                <label asp-for="phone">Phone:</label>
                <input value="@Model.phone" readonly />
            </div>

            <div class="form-group">
                <label asp-for="password">Password:</label>
                <input value="@Model.password" readonly" />
            </div>

            <div class="form-group">
                <label asp-for="role">Role:</label>
                <input value="@Model.role" readonly />
            </div>

            <a asp-action="AdminUser" class="container-section button">Back</a>
        </form>
    </div>
</div>