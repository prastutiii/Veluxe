
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/adminSite.css" />

    <div class="navbar">
        <a href="/Admin/Dashboard" class="brand">V E L U X E</a>
        <div class="links">
            @if (Context.Session.GetString("user_id") != null)
            {
                <a asp-controller="Registration" asp-action="Logout" asp-route-id="" class="logout-btn">Logout</a>
            }
        </div>
    </div>
</head>

<body>
    <div class="admin-sidebar">

        <ul class="sidebar-menu">
            <li><a href="/Admin/Dashboard">Dashboard</a></li>
            <li><a href="/AdminUser/AdminUser">Manage Users</a></li>
            <li><a href="/AdminCategory/AdminCategory">Manage Categories</a></li>
            <li><a href="/AdminProduct/AdminProduct">Manage Products</a></li>
            <li><a href="/AdminOrder/AdminOrder">Manage Orders</a></li>
            
        </ul>
    </div>

    <div class="admin-content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>

